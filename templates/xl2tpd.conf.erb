[global]
access control = no
<%- if @debug -%>
debug avp = yes
debug network = yes
debug state = yes
debug tunnel = yes
<%- end -%>

[lns default]
ip range = <%= @min_dynamic_ip %>-<%= @max_dynamic_ip %>
local ip = <%= @tunnel_ip %>
require authentication = yes
require chap = yes
refuse pap = yes
length bit = yes
name = l2tp
pppoptfile = <%= @pppoptfile %>
<%- if @debug -%>
ppp debug = yes
<%- end -%>
